{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Environment (Node ESM) === */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    /* === Strictness & Safety === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Output Features === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Module Syntax === */
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* === Performance === */
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}